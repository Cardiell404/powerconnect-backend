{
  "name": "users",
  "version": "1.0.0",
  "description": "",
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=20.9.0",
    "npm": ">=10.2.0"
  },
  "main": "index.js",
  "scripts": {
    "start": "npm run build && node ./dist/src/start.js",
    "start:dev": "ts-node-dev --respawn --transpile-only src/start.ts",
    "start:prod": "npm run build && node /dist/src/start",
    "build": "npm run clean && npm run build:tsc && npm run copy:di",
    "build:tsc": "tsc -p tsconfig.prod.json",
    "clean": "rm -rf dist",
    "copy:di": "copy 'src/**/*.{json,yaml,html,png}' dist/src",
    "lint": "eslint 'src/**/*.ts'",
    "format": "prettier --write 'src/**/*.ts'",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "security:check": "npx npm-check-updates",
    "security:audit": "npm audit --json > security_report.json",
    "podman:build": "podman build -t users .",
    "podman:run": "podman run -d -p 3000:3000 users",
    "precomit": "lint-staged",
    "prepush": "npm run test:coverage",
    "deploy": "pm2 start dist/src/start.js --name 'users' --env production",
    "deploy:list": "pm2 list",
    "deploy:dev": "pm2 start dist/src/start.js --name 'users' --env development",
    "deploy:exit": "pm2 kill",
    "logs": "pm2 logs",
    "docs": "swagger-jsdoc -d ./swaggerDef.ts -o ./swagger.json",
    "ci:install": "npm ci",
    "ci:test": "npm run lint && npm run test:coverage",
    "ci:build": "npm run build",
    "ci:deploy": "npm run deploy"
  },
  "dependencies": {
    "@powerconnect/shared": "0.0.9",
    "compression": "^1.7.4",
    "convict": "^6.2.4",
    "cookie-session": "^2.0.0",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-promise-router": "^4.1.1",
    "glob": "^7.1.6",
    "helmet": "^7.1.0",
    "http-status": "^1.7.4",
    "node-dependency-injection": "^3.1.2",
    "pm2": "^5.4.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/convict": "^6.1.6",
    "@types/cookie-session": "^2.0.44",
    "@types/cors": "^2.8.17",
    "@types/glob": "^7.1.3",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.1.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "copy": "^0.3.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "npm-check-updates": "^17.0.0",
    "prettier": "^3.3.3",
    "swagger-jsdoc": "^6.2.8",
    "ts-jest": "^29.2.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.5.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,tests}/**/*.ts": [
      "prettier --write",
      "git add"
    ]
  },
  "keywords": []
}
